<p id="notice"><%= notice %></p>

<h1>Devices</h1>
<%= link_to 'Add Device', new_device_path %>
<br><br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">MAC</th>
      <th scope="col">Status</th>
      <th scope="col">Message Count</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= link_to device.name, device %></td>
        <td><%= device.mac %></td>
        <td><%= device.messages.count %></td>
        <td><div class="text-center"><%= device.messages.count %></div></td>
        <td><%= link_to 'Update Data', update_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

